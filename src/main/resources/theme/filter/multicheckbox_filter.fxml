<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.CustomMenuItem?>
<?import org.controlsfx.control.CheckListView?>
<?import javafx.scene.layout.VBox?>
<MenuButton xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:id="root"
            fx:controller="com.faforever.client.filter.FilterMultiCheckboxController" styleClass="query-filter">
    <items>
        <CustomMenuItem hideOnClick="false" styleClass="query-item">
            <content>
                <VBox fx:id="contentVBox" spacing="4.0">
                    <CheckListView fx:id="listView" prefHeight="150"/>
                </VBox>
            </content>
        </CustomMenuItem>
    </items>
</MenuButton>